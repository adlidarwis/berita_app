<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="70sp"
            android:layout_height="50sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"/>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:cardCornerRadius="80dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/cardview_shadow_end_color">

            <androidx.appcompat.widget.SearchView
                android:layout_marginLeft="0dp"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:hint="search something"
                android:textColor="@color/black"
                android:paddingLeft="30dp">


            </androidx.appcompat.widget.SearchView>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/logout"
            android:layout_width="114dp"
            android:layout_height="45sp"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/poppins_bold"
            android:onClick="to_Login1"
            android:text="Log-Out"
            android:textColor="@color/white" />


    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/news"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_200"
                android:fontFamily="@font/poppins_bold"
                android:text="News"
                android:textColor="@color/white"
                android:onClick="to_Romance"/>
            <Button
                android:id="@+id/fashion"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/teal_200"
                android:text="Fashion"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/sport"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_200"
                android:text="Sport"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/political"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_200"
                android:text="political"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/entertainment"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_200"
                android:text="entertain"
                android:textColor="@color/white" />



        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_bold"
                android:text="HOT NewsðŸ”¥"
                android:textColor="#000"
                android:textSize="25dp" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:src="@drawable/beritafashion1" />

                    <ImageView
                        android:id="@+id/img11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:src="@drawable/beritafashion2" />


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Latest News"
                android:textColor="#000"
                android:textSize="25dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false">
                <LinearLayout
                    android:orientation="vertical" android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="395dp"
                        android:layout_height="149dp"
                        android:layout_marginLeft="10dp"
                        android:onClick="to_Item"
                        android:src="@drawable/berita01" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="395dp"
                        android:layout_height="149dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/berita02" />

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="395dp"
                        android:layout_height="149dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/berita04" />

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="395dp"
                        android:layout_height="149dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/berita03" />

                </LinearLayout>


            </ScrollView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
